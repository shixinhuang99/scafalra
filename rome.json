{
  "linter": {
    "enabled": true,
    "ignore": [
      "node_modules",
      "/dist",
      "/coverage",
      "/debug"
    ],
    "rules": {
      "recommended": true
    }
  },
  "formatter": {
    "enabled": true,
    "ignore": [
      "node_modules",
      "/dist",
      "/coverage",
      "/debug"
    ],
    "indentStyle": "space",
    "indentSize": 2
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "quoteProperties": "preserve"
    }
  }
}

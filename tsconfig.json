{
  "compilerOptions": {
    "target": "ES2021",
    "lib": ["ES2021"],
    "module": "CommonJS",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "removeComments": true,
    "listEmittedFiles": true
  },
  "include": ["src"],
  "exclude": ["tsup.config.ts"],
  "ts-node": {
    "transpileOnly": true
  }
}

{
  "compilerOptions": {
    "target": "ES2015",
    "lib": ["ESNext"],
    "module": "commonjs",
    "outDir": "bin",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "removeComments": true,
    "listEmittedFiles": true
  },
  "include": ["src"],
  "ts-node": {
    "transpileOnly": true
  }
}

{
  "name": "scafalra",
  "version": "0.5.0",
  "description": "command-line interface tool for manage scaffolding",
  "author": "shixinhuang99 <shixinhuang99@gmail.com>",
  "license": "MIT",
  "homepage": "https://github.com/shixinhuang99/scafalra#readme",
  "bugs": "https://github.com/shixinhuang99/scafalra/issues",
  "repository": {
    "type": "git",
    "url": "https://github.com/shixinhuang99/scafalra.git"
  },
  "type": "module",
  "bin": {
    "scafalra": "dist/cli.js"
  },
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=16",
    "pnpm": ">=7"
  },
  "keywords": [
    "scafalra",
    "scaffold",
    "template",
    "boilerplate",
    "command-line"
  ],
  "scripts": {
    "dev": "npm run build && NODE_ENV=dev node ./dist/cli.js",
    "build": "node ./scripts/rmrf.js ./dist && swc ./src -d ./dist",
    "pretest": "npm run build",
    "test": "vitest",
    "test:cov": "vitest --coverage",
    "postversion": "git push && git push --tags",
    "typecheck": "tsc --noEmit",
    "debug": "node ./scripts/rmrf.js ./debug && swc ./src -d ./debug -s",
    "fmt": "rome format ./src ./test ./scripts --write",
    "lint": "rome check ./src ./test ./scripts",
    "prepare": "husky install"
  },
  "dependencies": {
    "cac": "^6.7.14",
    "chalk": "^5.0.1",
    "https-proxy-agent": "^5.0.1",
    "mri": "^1.2.0",
    "node-stream-zip": "^1.15.0"
  },
  "devDependencies": {
    "@swc/cli": "^0.1.57",
    "@swc/core": "^1.3.19",
    "@types/node": "^18.7.1",
    "@vitest/coverage-c8": "^0.24.3",
    "c8": "^7.12.0",
    "husky": "^8.0.0",
    "msw": "^0.49.2",
    "rome": "^10.0.1",
    "typescript": "^4.9.3",
    "vitest": "^0.25.3",
    "zip-a-folder": "^1.1.5"
  },
  "packageManager": "pnpm@7.9.5"
}
